<% header = link_to('All Posts', posts_path) %>

<p class='pull-right'>
  [<%= link_to 'edit this post', edit_post_path(@post) %>]
</p>

<%= render 'shared/content_title', title: header %>

<p>
  <%= render @post.categories %>
</p>

<%= render 'shared/content_title', title: @post.title %>

<p>
  <%= @post.description %>
</p>

<hr />
<%= render 'shared/display_errors', object: @comment %>
<%= form_for [@post, @comment] do |f| %>
  <div class='controll-group'>
    <%= f.label :comment, 'Leave a comment' %>
    <%= f.text_area :body, rows: 3, class:'span4' %>
  </div>
  <%= f.submit('Create Comment', class: 'btn btn-primary') %>
<% end %>

<h5>Comments</h5>
<% @post.comments.each do |comment| %>
  <div class='well span8'>
    <em><%= comment.body %></em>
    <br/>
    <small>created by <%= link_to(comment.creator.username, '') %>, at <%= display_datetime(comment.created_at) %></small>
  </div>
<% end %>
