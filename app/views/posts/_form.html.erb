<%= render 'shared/display_errors', object: @post %>

<%= form_for @post do |f| %>
  <div class='control-group'>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class='control-group'>
    <%= f.label :url %>
    <%= f.text_field :url %>
  </div>
  <div class='control-group'>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class='control-group'>
    <%= f.label "Categories" %>
    <%= f.collection_select(:category_ids, Category.all, :id, :name, {}, {:multiple => true}) %>
  </div>
  <%= f.submit(@post.new_record? ? 'Create Post' : 'Update Post', class: 'btn btn-primary') %>
<% end %>
