<%= render 'shared/display_errors', object: @user %>

<%= form_for @user, url: (@user.new_record? ? register_path : user_path) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  </br>
  <%= f.submit(@user.new_record? ? 'Register' : 'Update', class: 'btn btn-primary') %>
<% end %>
